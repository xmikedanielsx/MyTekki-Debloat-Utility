{
  "Id": "DetailedBSOD",
  "Name": "Detailed BSoD",
  "Description": "If Enabled then you will see a detailed Blue Screen of Death (BSOD) with more information.",
  "Category": "Customize Preferences",
  "Severity": "Low",
  "Tags": ["system", "bsod", "debugging"],
  "CTTKey": "WPFToggleDetailedBSoD",
  "ApplyOperations": {
    "RegistryOperations": [
      {
        "Hive": "LocalMachine",
        "KeyPath": "SYSTEM\\CurrentControlSet\\Control\\CrashControl",
        "ValueName": "DisplayParameters",
        "Value": 1,
        "ValueType": "DWord",
        "Operation": "SetValue"
      },
      {
        "Hive": "LocalMachine", 
        "KeyPath": "SYSTEM\\CurrentControlSet\\Control\\CrashControl",
        "ValueName": "DisableEmoticon",
        "Value": 1,
        "ValueType": "DWord",
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": []
  },
  "UndoOperations": {
    "RegistryOperations": [
      {
        "Hive": "LocalMachine",
        "KeyPath": "SYSTEM\\CurrentControlSet\\Control\\CrashControl",
        "ValueName": "DisplayParameters",
        "Value": 0,
        "ValueType": "DWord",
        "Operation": "SetValue"
      },
      {
        "Hive": "LocalMachine", 
        "KeyPath": "SYSTEM\\CurrentControlSet\\Control\\CrashControl",
        "ValueName": "DisableEmoticon",
        "Value": 0,
        "ValueType": "DWord",
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": []
  },
  "DetectionRules": [
    {
      "Type": "Registry",
      "Hive": "LocalMachine",
      "KeyPath": "SYSTEM\\CurrentControlSet\\Control\\CrashControl",
      "ValueName": "DisplayParameters",
      "ExpectedValue": 1,
      "ValueType": "DWord"
    }
  ],
  "Authors": [
    {
      "Name": "Chris Titus",
      "Url": "https://github.com/ChrisTitusTech",
      "SupportUrl": "https://winutil.christitus.com/dev/tweaks/customize-preferences/detailedbsod",
      "Type": "Original",
      "Notes": "Original implementation from Chris Titus Tech's Windows utility for detailed BSOD information"
    }
  ]
}