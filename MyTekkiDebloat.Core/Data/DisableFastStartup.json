{
  "Id": "DisableFastStartup",
  "Name": "Disable Fast Startup",
  "Description": "Disables Windows Fast Startup feature which can cause issues with dual-boot systems and hardware changes detection.",
  "Category": "System",
  "Severity": "Low",
  "Tags": ["startup", "hibernation", "boot", "compatibility"],
  "CTTKey": "",
  "ApplyOperations": {
    "RegistryOperations": [
      {
        "Hive": "LocalMachine",
        "KeyPath": "SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Power",
        "ValueName": "HiberbootEnabled",
        "Value": 0,
        "ValueType": "DWord",
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": []
  },
  "UndoOperations": {
    "RegistryOperations": [
      {
        "Hive": "LocalMachine",
        "KeyPath": "SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Power",
        "ValueName": "HiberbootEnabled",
        "Value": 1,
        "ValueType": "DWord",
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": []
  },
  "DetectionRules": [
    {
      "Type": "Registry",
      "Hive": "LocalMachine",
      "KeyPath": "SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Power",
      "ValueName": "HiberbootEnabled",
      "ExpectedValue": 0,
      "ValueType": "DWord"
    }
  ],
  "Authors": [
    {
      "Name": "MyTekki",
      "Url": "https://mytekki.com", 
      "SupportUrl": "https://mytekki.com",
      "Type": "Original",
      "Notes": "Custom implementation for Windows Fast Startup disable - helps with dual-boot systems and hardware detection issues"
    }
  ]
}