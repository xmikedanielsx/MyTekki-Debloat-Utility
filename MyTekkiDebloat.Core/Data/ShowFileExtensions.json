{
  "Id": "ShowFileExtensions",
  "Name": "Show File Extensions",
  "Description": "Shows file extensions for all file types in Windows Explorer, improving security by making malicious files more identifiable.",
  "Category": "System",
  "Severity": "Low",
  "Tags": ["explorer", "security", "files", "extensions"],
  "CTTKey": "WPFToggleShowExt",
  "ApplyOperations": {
    "RegistryOperations": [
      {
        "Hive": "CurrentUser",
        "KeyPath": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced",
        "ValueName": "HideFileExt",
        "Value": 0,
        "ValueType": "DWord",
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": [
      {
        "Operation": "Execute",
        "Script": "Stop-Process -Name explorer -Force; Start-Sleep -Seconds 2; Start-Process explorer"
      }
    ]
  },
  "UndoOperations": {
    "RegistryOperations": [
      {
        "Hive": "CurrentUser",
        "KeyPath": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced",
        "ValueName": "HideFileExt",
        "Value": 1,
        "ValueType": "DWord",
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": [
      {
        "Operation": "Execute",
        "Script": "Stop-Process -Name explorer -Force; Start-Sleep -Seconds 2; Start-Process explorer"
      }
    ]
  },
  "DetectionRules": [
    {
      "Type": "Registry",
      "Hive": "CurrentUser",
      "KeyPath": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced",
      "ValueName": "HideFileExt",
      "ExpectedValue": 0,
      "ValueType": "DWord"
    }
  ],
  "Authors": [
    {
      "Name": "Chris Titus",
      "Url": "https://github.com/ChrisTitusTech",
      "SupportUrl": "https://winutil.christitus.com/dev/tweaks/customize-preferences/showext",
      "Type": "Original",
      "Notes": "Original implementation from Chris Titus Tech's Windows utility for showing file extensions in Explorer"
    }
  ]
}