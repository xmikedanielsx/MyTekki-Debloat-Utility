{
  "Id": "DisableGameDVR",
  "Name": "Disable Game DVR",
  "Description": "Disables Xbox Game DVR and Game Mode features that can impact system performance during gaming and general usage.",
  "Category": "Performance",
  "Severity": "Low",
  "Tags": ["gaming", "dvr", "xbox", "performance"],
  "CTTKey": "WPFTweaksDVR",
  "ApplyOperations": {
    "RegistryOperations": [
      {
        "Hive": "CurrentUser",
        "KeyPath": "System\\GameConfigStore",
        "ValueName": "GameDVR_FSEBehavior",
        "Value": 2,
        "ValueType": "DWord",
        "Operation": "SetValue"
      },
      {
        "Hive": "CurrentUser",
        "KeyPath": "System\\GameConfigStore",
        "ValueName": "GameDVR_Enabled",
        "Value": 0,
        "ValueType": "DWord",
        "Operation": "SetValue"
      },
      {
        "Hive": "CurrentUser",
        "KeyPath": "System\\GameConfigStore",
        "ValueName": "GameDVR_HonorUserFSEBehaviorMode",
        "Value": 1,
        "ValueType": "DWord",
        "Operation": "SetValue"
      },
      {
        "Hive": "CurrentUser",
        "KeyPath": "System\\GameConfigStore",
        "ValueName": "GameDVR_EFSEFeatureFlags",
        "Value": 0,
        "ValueType": "DWord",
        "Operation": "SetValue"
      },
      {
        "Hive": "LocalMachine",
        "KeyPath": "SOFTWARE\\Policies\\Microsoft\\Windows\\GameDVR",
        "ValueName": "AllowGameDVR",
        "Value": 0,
        "ValueType": "DWord",
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": []
  },
  "UndoOperations": {
