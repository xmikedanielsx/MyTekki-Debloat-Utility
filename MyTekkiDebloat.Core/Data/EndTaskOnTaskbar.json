{
  "Id": "EndTaskOnTaskbar",
  "Name": "Enable End Task With Right Click", 
  "Description": "Enables option to end task when right clicking a program in the taskbar",
  "Category": "Essential Tweaks",
  "Severity": "Low",
  "Tags": ["taskbar", "productivity", "interface"],
  "CTTKey": "WPFTweaksEndTaskOnTaskbar",
  "ApplyOperations": {
    "RegistryOperations": [
      {
        "Hive": "CurrentUser",
        "KeyPath": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced\\TaskbarDeveloperSettings",
        "ValueName": "TaskbarEndTask",
        "Value": 1,
        "ValueType": "DWord", 
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": []
  },
  "UndoOperations": {
    "RegistryOperations": [
      {
        "Hive": "CurrentUser",
        "KeyPath": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced\\TaskbarDeveloperSettings",
        "ValueName": "TaskbarEndTask",
        "Value": 0,
        "ValueType": "DWord", 
        "Operation": "SetValue"
      }
    ],
    "ServiceOperations": [],
    "FileOperations": [],
    "PowerShellOperations": []
  },
  "DetectionRules": [
    {
      "Type": "Registry",
      "Hive": "CurrentUser",
